        <nav class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center">
            <a class="text-xl md:text-2xl font-bold tracking-tight text-white hover:text-blue-400 transition-colors duration-200 no-underline flex items-center gap-2" href="/">
                Accueil
            </a>
            
