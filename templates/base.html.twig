            <button id="mobile-menu-btn" class="md:hidden text-white focus:outline-none">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
                </svg>
            </button>

            <!-- Desktop Menu -->
            <ul class="hidden md:flex gap-8 items-center m-0 list-none">
                <li class="relative h-full flex items-center group mx-2" id="dropdown-competences">
                    <a class="text-sm font-medium text-white/75 py-2 relative whitespace-nowrap hover:text-white transition-colors duration-200 no-underline after:content-[''] after:absolute after:bottom-[-4px] after:left-0 after:w-0 after:h-[2px] after:bg-blue-600 after:transition-[width] after:duration-300 group-hover:after:w-full" href="/compétences" id="navbarDropdownCompetences"
                        role="button" aria-expanded="false">
                        Compétences
