{% extends 'base.html.twig' %}

{% block title %}Certifications{% endblock %}

{% block body %}
<section class="certifications-section" style="max-width: 800px; margin: 40px auto; background: #fff; border-radius: 12px; box-shadow: 0 4px 24px rgba(0,0,0,0.08); padding: 32px;">
    <h2 class="section-title" style="font-size: 2.2rem; font-weight: 700; color: #2c3e50; margin-bottom: 32px; text-align: center; letter-spacing: 1px;"></h2>
        Certifications
    </h2>
    <div class="certification-group" style="margin-bottom: 32px;">
        <h3 class="school-title" style="font-size: 1.3rem; color: #2980b9; font-weight: 600; margin-bottom: 12px;">
            Lycée Notre Dame de La Providence, Avranches
        </h3>
        <ul class="certification-list" style="list-style: none; padding: 0;">
            <li style="margin-bottom: 10px; display: flex; align-items: center;">
                <a href="/attestation-ANSSI.pdf" class="certification-button" target="_blank" rel="noopener noreferrer" style="background: #eaf6fb; color: #2980b9; border-radius: 6px; padding: 6px 12px; font-weight: 500; margin-right: 12px; text-decoration: none; display: flex; align-items: center;">
                    <strong>ANSSI</strong>
                </a>
                <span class="year" style="color: #7f8c8d; font-size: 0.98rem; margin-right: 10px;">2025</span>
                <span class="certification-desc" style="color: #16a085; font-size: 0.98rem;">Attestation de sensibilisation à la cybersécurité délivrée par l'ANSSI.</span>
            </li>
            <li style="margin-bottom: 10px; display: flex; align-items: center;">
                <span class="certification-name" style="background: #eaf6fb; color: #2980b9; border-radius: 6px; padding: 6px 12px; font-weight: 500; margin-right: 12px;">
                    <strong>Voltaire</strong>
                </span>
                <span class="year" style="color: #7f8c8d; font-size: 0.98rem; margin-right: 10px;">2025</span>
                <span class="certification-desc" style="color: #16a085; font-size: 0.98rem;">Certification de maîtrise de la langue française (Projet Voltaire).</span>
            </li>
        </ul>
    </div>
</section>
{% endblock %}
