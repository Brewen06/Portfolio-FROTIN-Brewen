{% extends 'base.html.twig' %}

{% block title %}Diplômes{% endblock %}

{% block body %}
<section class="diplomes-section" style="max-width: 800px; margin: 40px auto; background: #fff; border-radius: 12px; box-shadow: 0 4px 24px rgba(0,0,0,0.08); padding: 32px;">
    <h2 class="section-title" style="font-size: 2.2rem; font-weight: 700; color: #2c3e50; margin-bottom: 32px; text-align: center; letter-spacing: 1px;">
        Diplômes
    </h2>

    <div class="diplome-group" style="margin-bottom: 32px;"></div>
        <h3 class="school-title" style="font-size: 1.3rem; color: #2980b9; font-weight: 600; margin-bottom: 12px;">
            Collège Sacré Coeur de Mortain
        </h3>
        <ul class="diplome-list" style="list-style: none; padding: 0;">
            <li style="margin-bottom: 10px; display: flex; align-items: center;">
                <span style="background: #eaf6fb; color: #2980b9; border-radius: 6px; padding: 6px 12px; font-weight: 500; margin-right: 12px;">
                    Diplôme de Secourisme
                </span>
                <span class="diplome-year" style="color: #7f8c8d; font-size: 0.98rem;">2019</span>
            </li>
            <li style="margin-bottom: 10px; display: flex; align-items: center;">
                <span style="background: #eaf6fb; color: #2980b9; border-radius: 6px; padding: 6px 12px; font-weight: 500; margin-right: 12px;">
                    Brevet des Collèges
                </span>
                <span class="diplome-mention" style="color: #16a085; font-size: 0.98rem; margin-right: 10px;">(Mention Bien)</span>
                <span class="diplome-year" style="color: #7f8c8d; font-size: 0.98rem;">2021</span>
            </li>
        </ul>
    </div>

    <div class="diplome-group" style="margin-bottom: 32px;">
        <h3 class="school-title" style="font-size: 1.3rem; color: #2980b9; font-weight: 600; margin-bottom: 12px;">
            Lycée Institut Sévigné à Granville
        </h3>
        <ul class="diplome-list" style="list-style: none; padding: 0;">
            <li style="margin-bottom: 10px; display: flex; align-items: center;">
                <span style="background: #eaf6fb; color: #2980b9; border-radius: 6px; padding: 6px 12px; font-weight: 500; margin-right: 12px;">
                    Journée du citoyen
                </span>
                <span class="diplome-year" style="color: #7f8c8d; font-size: 0.98rem;">2024</span>
            </li>
        </ul>
    </div>

    <div class="diplome-group">
        <h3 class="school-title" style="font-size: 1.3rem; color: #2980b9; font-weight: 600; margin-bottom: 12px;">
            Lycée Notre Dame de La Providence à Avranches
        </h3>
        <ul class="diplome-list" style="list-style: none; padding: 0;">
            <li style="margin-bottom: 10px; display: flex; align-items: center;">
                <span style="background: #eaf6fb; color: #2980b9; border-radius: 6px; padding: 6px 12px; font-weight: 500; margin-right: 12px;">
                    Baccalauréat STMG
                </span>
                <span class="diplome-year" style="color: #7f8c8d; font-size: 0.98rem;">2024</span>
            </li>
        </ul>
    </div>
</section>
{% endblock %}
