{% extends 'base.html.twig' %}

{% block title %}Diplômes{% endblock %}

{% block body %}
<section class="flex flex-col gap-8 max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-6 border-l-[5px] border-blue-600 pl-4 text-slate-900 inline-block">
        Diplômes
    </h2>

    <div class="bg-white rounded-2xl p-8 shadow-md border-l-[5px] border-blue-600 transition-all duration-300 hover:-translate-y-2 hover:shadow-xl">
