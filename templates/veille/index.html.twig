{% extends 'base.html.twig' %}

{% block title %}Veille technologique{% endblock %}

{% block body %}
    <style>
        .veille {
            max-width: 700px;
            margin: 40px auto;
            padding: 32px 24px;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 16px rgba(0,0,0,0.08);
        }
        .veille h1 {
            font-size: 2rem;
            margin-bottom: 24px;
            color: #2c3e50;
            text-align: center;
        }
        .rss-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        .rss-list li {
            margin-bottom: 18px;
            padding: 12px 16px;
            border-radius: 8px;
            background: #f7f9fa;
            transition: background 0.2s;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .rss-list li:hover {
            background: #e3eaf2;
        }
        .rss-list strong {
            color: #2980b9;
            min-width: 90px;
            display: inline-block;
            font-size: 1rem;
        }
        .rss-list a {
            color: #34495e;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s;
        }
        .rss-list a:hover {
            color: #1abc9c;
            text-decoration: underline;
        }
        .veille p {
            color: #c0392b;
            text-align: center;
            margin-top: 32px;
        }
    </style>
    <div class="veille">
        <h1>{{ page_title }}</h1>
        <p>Voici les dernières actualités sur l'intélligence artificielle:</p>
        {% if feed_items|length > 0 %}
            <ul class="rss-list">
                {% for item in feed_items|slice(0, 10) %}
                    <li>
                        <strong>{{ item.pubDate|date("d/m/Y") }}</strong> :
                        <a href="{{ item.link }}" target="_blank" rel="noopener noreferrer">{{ item.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>Erreur de chargement du flux.</p>
        {% endif %}
    </div>
    {% endblock %}